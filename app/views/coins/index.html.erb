<%if notice!= nil%>
  <div class="alert alert-primary" role="alert"><%= notice %></div>
<%end%>

<h1><%=@coins.model_name.human(count: @coins.count)%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%=@coins.human_attribute_name(:description)%></th>
      <th><%=@coins.human_attribute_name(:acronym)%></th>
      <th><%=@coins.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size:"25x25" %></td>
        <td><%= link_to t('link.show'), coin, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to t('link.edit'), edit_coin_path(coin), class:"btn btn-success btn-sm" %></td>
        <td><%= link_to t('link.destroy'), coin, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('link.new.coin'), new_coin_path, class:"btn btn-primary" %>
